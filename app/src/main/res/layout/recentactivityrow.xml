<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clipToPadding="true">

        <RelativeLayout
            android:id="@+id/rl_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_summary_recentImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_summary_beertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_toRightOf="@id/iv_summary_recentImage"
                android:hint="Title"
                android:textColor="@color/appBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_summary_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:gravity="right"
                android:hint="brewey date"
                android:textColor="@color/appBlack"

                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_summary_breweryinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_summary_date"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/iv_summary_recentImage"
                android:hint="brewey info"
                android:textColor="@color/appBlack"
                android:textSize="10sp" />

            <View
                android:id="@+id/linearDivider"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/tv_summary_breweryinfo"
                android:layout_toRightOf="@id/iv_summary_recentImage"
                android:background="@color/appGrey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearDivider"
                android:layout_toRightOf="@id/iv_summary_recentImage"
                android:weightSum="100"

                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:background="@color/appWhite"
                    android:text="Details"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:background="@color/appWhite"
                    android:text="Review"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>