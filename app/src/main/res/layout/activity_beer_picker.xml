<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.craftbeermob.Activities.BeerPicker">


    <include
        android:id="@+id/toolBar"
        layout="@layout/apptoolbar"></include>

    <TextView
        android:id="@+id/beerpicker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:gravity="center"
        android:text="Select your beer"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/beerpicker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/beerpicker_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/beerpicker_beerphoto"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" ">

            <EditText
                android:id="@+id/beerpicker_comments_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="comments"
                android:maxLength="100"
                android:maxLines="8"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Spinner
        android:id="@+id/beerpicker_brewer_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beerpicker_layout"
        android:layout_margin="10dp"
        android:entries="@array/brewers" />

    <Spinner
        android:id="@+id/beerpicker_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beerpicker_brewer_spinner"
        android:layout_margin="10dp"
        android:entries="@array/beertype" />

    <TextView
        android:id="@+id/ratingtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/beerpicker_type_spinner"
        android:gravity="center"
        android:text="Rating"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ratingtv" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ratingBar"
        android:background="@drawable/buttonshape"
        android:text="Next"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
